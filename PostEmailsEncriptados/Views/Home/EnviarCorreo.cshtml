@{
    ViewBag.Title = "EnviarCorreo";
}

<h2>Enviar Email Encriptado</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Para: </label>&nbsp&nbsp&nbsp&nbsp
        <input type="email" name="para" />
    </div>
    <div>
        <label>Asunto: </label>
        <input type="text" name="asunto" />
    </div><br /> 
    <div>
        <label>Mensaje: </label><br />
        <textarea rows="5" class="form-control" name="mensaje" placeholder="Escriba su mensaje"></textarea>
    </div><br />
    <div>
        <button type="submit">Enviar correo</button>
    </div>
</form>

<h3 style="color:blue">
    @ViewBag.Mensaje
</h3>

<h2 style="color:red">
    @ViewBag.Error
</h2>


